<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="BackupWarden.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:BackupWarden.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BackupWarden.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:BackupWarden.Models"
    xmlns:viewmodels="using:BackupWarden.ViewModels"
    x:Name="RootPage"
    DataContext="{x:Bind ViewModel}"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Page.Resources>
    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="0,0,0,12"
            FontSize="24"
            FontWeight="Bold"
            Text="Backup Warden" />
        <Grid Grid.Row="1" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="0,16,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0"
                    Orientation="Vertical"
                    Spacing="8">
                    <StackPanel Orientation="Vertical" Spacing="4">
                        <TextBlock
                            Margin="0,0,0,12"
                            FontWeight="SemiBold"
                            Text="YAML Configuration Files" />
                        <ItemsControl ItemsSource="{x:Bind ViewModel.YamlFilePaths, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="x:String">
                                    <StackPanel
                                        Margin="0,0,0,12"
                                        Orientation="Horizontal"
                                        Spacing="8">
                                        <TextBox
                                            Width="600"
                                            IsReadOnly="True"
                                            Text="{x:Bind}" />
                                        <Button
                                            Command="{Binding DataContext.RemoveYamlFileCommand, ElementName=RootPage}"
                                            CommandParameter="{x:Bind}"
                                            Content="Remove" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Button
                            x:Name="AddYamlButton"
                            Width="32"
                            Height="32"
                            HorizontalAlignment="Left"
                            Command="{x:Bind ViewModel.AddYamlFileCommand, Mode=OneWay}"
                            Content="+" />
                    </StackPanel>
                    <StackPanel
                        Margin="0,16,0,0"
                        Orientation="Vertical"
                        Spacing="4">
                        <TextBlock
                            Margin="0,0,0,12"
                            FontWeight="SemiBold"
                            Text="Destination Folder" />
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBox
                                Width="600"
                                IsReadOnly="True"
                                PlaceholderText="Select destination folder..."
                                Text="{x:Bind ViewModel.DestinationFolder, Mode=OneWay}" />
                            <Button Command="{x:Bind ViewModel.BrowseDestinationFolderCommand, Mode=OneWay}" Content="Browse" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal"
                    Spacing="4">
                    <Button Command="{x:Bind ViewModel.SyncCommand, Mode=OneWay}" Content="Sync" />
                    <ProgressBar
                        Width="150"
                        Maximum="100"
                        Minimum="0"
                        Visibility="{x:Bind ViewModel.IsSyncing, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Value="{x:Bind ViewModel.SyncProgress, Mode=OneWay}" />
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1" Margin="0,16,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0"
                    Orientation="Vertical"
                    Spacing="8">
                    <TextBlock FontWeight="SemiBold" Text="Available Backup Apps" />
                    <ListView
                        Width="480"
                        Height="480"
                        ItemsSource="{x:Bind ViewModel.LoadedApps, Mode=OneWay}"
                        SelectedItem="{x:Bind ViewModel.SelectedApp, Mode=TwoWay}"
                        SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:AppConfig">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock FontWeight="Bold" Text="{x:Bind Name}" />
                                    <TextBlock Margin="8,0,0,0" Text="{x:Bind Id}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
                <Button Grid.Row="1" Content="Restore" />
            </Grid>
        </Grid>
    </Grid>
</Page>
