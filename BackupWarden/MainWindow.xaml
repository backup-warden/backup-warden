<Window
    x:Class="BackupWarden.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BackupWarden"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BackupWarden"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="0,0,0,12"
            FontSize="18"
            FontWeight="Bold"
            Text="YAML Configuration Files" />
        <StackPanel
            Grid.Row="1"
            Orientation="Vertical"
            Spacing="8">
            <ItemsControl ItemsSource="{x:Bind ViewModel.YamlFilePaths, Mode=OneWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <TextBox
                            Margin="0,0,0,4"
                            IsReadOnly="True"
                            Text="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button
                x:Name="AddYamlButton"
                Width="32"
                Height="32"
                HorizontalAlignment="Left"
                Command="{x:Bind ViewModel.AddYamlFileCommand}"
                Content="+" />
            <!--  Destination Folder Selection  -->
            <StackPanel
                Margin="0,12,0,0"
                Orientation="Horizontal"
                Spacing="8">
                <TextBox
                    Width="300"
                    IsReadOnly="True"
                    PlaceholderText="Select destination folder..."
                    Text="{x:Bind ViewModel.DestinationFolder, Mode=TwoWay}" />
                <Button Command="{x:Bind ViewModel.BrowseDestinationFolderCommand}" Content="Browse" />
            </StackPanel>
        </StackPanel>
        <Button
            Grid.Row="2"
            Margin="0,12,8,0"
            HorizontalAlignment="Left"
            Command="{x:Bind ViewModel.SyncCommand}"
            Content="Sync" />
    </Grid>
</Window>