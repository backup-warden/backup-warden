<Window
    x:Class="BackupWarden.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BackupWarden"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BackupWarden"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:Name="AppTitleBar" />
        <Grid Grid.Row="1" Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Margin="0,0,0,12"
                FontSize="24"
                FontWeight="Bold"
                Text="Backup Warden" />
            <StackPanel
                Grid.Row="1"
                Orientation="Vertical"
                Spacing="8">
                <StackPanel
                    Margin="0,16,0,0"
                    Orientation="Vertical"
                    Spacing="4">
                    <TextBlock
                        Margin="0,0,0,12"
                        FontWeight="SemiBold"
                        Text="YAML Configuration Files" />
                    <ItemsControl ItemsSource="{x:Bind ViewModel.YamlFilePaths, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <TextBox
                                    Width="640"
                                    Margin="0,0,0,12"
                                    HorizontalAlignment="Left"
                                    IsReadOnly="True"
                                    Text="{x:Bind}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <Button
                        x:Name="AddYamlButton"
                        Width="32"
                        Height="32"
                        HorizontalAlignment="Left"
                        Command="{x:Bind ViewModel.AddYamlFileCommand}"
                        Content="+" />
                </StackPanel>
                <StackPanel
                    Margin="0,16,0,0"
                    Orientation="Vertical"
                    Spacing="4">
                    <TextBlock
                        Margin="0,0,0,12"
                        FontWeight="SemiBold"
                        Text="Destination Folder" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBox
                            Width="640"
                            IsReadOnly="True"
                            PlaceholderText="Select destination folder..."
                            Text="{x:Bind ViewModel.DestinationFolder, Mode=OneWay}" />
                        <Button Command="{x:Bind ViewModel.BrowseDestinationFolderCommand}" Content="Browse" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel
                Grid.Row="2"
                Margin="0,12,8,0"
                HorizontalAlignment="Left"
                Orientation="Horizontal"
                Spacing="4">
                <Button Command="{x:Bind ViewModel.SyncCommand}" Content="Sync" />
                <ProgressBar
                    Width="150"
                    Maximum="100"
                    Minimum="0"
                    Visibility="Visible"
                    Value="{x:Bind ViewModel.SyncProgress, Mode=OneWay}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>