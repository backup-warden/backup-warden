<Window
    x:Class="BackupWarden.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BackupWarden"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="BackupWarden">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="YAML Configuration Files" FontWeight="Bold" FontSize="18" Margin="0,0,0,12"/>
        <StackPanel Grid.Row="1" Orientation="Vertical" Spacing="8">
            <ItemsControl ItemsSource="{x:Bind ViewModel.YamlFilePaths, Mode=OneWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <TextBox Text="{Binding}" IsReadOnly="True" Margin="0,0,0,4"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button x:Name="AddYamlButton" Content="+" Width="32" Height="32" Command="{x:Bind ViewModel.AddYamlFileCommand}" HorizontalAlignment="Left"/>
        </StackPanel>
        <Button Grid.Row="2" Content="Load Config" Command="{x:Bind ViewModel.LoadConfigCommand}" HorizontalAlignment="Right" Margin="0,12,0,0"/>
    </Grid>
</Window>